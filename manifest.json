{
  "manifest_version": 3,
  "name": "WJ AutoLogin",
  "version": "1.0",
  "description": "Puente de autologueo para WJ ERP",
  "permissions": [
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*", 
    "https://*.sunat.gob.pe/*",
    "https://*.afpnet.com.pe/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },

  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://midominio-erp.com/*" 
    ]
  }
}